                android:layout_marginTop="12dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="2dp">

                <Button
                    android:id="@+id/documents_btn_submit"
                    android:layout_width="match_parent"
