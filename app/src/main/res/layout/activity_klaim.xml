<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp">


            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/documents_card_expenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="3dp"
                android:layout_marginBottom="8dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="2dp">

                    <LinearLayout
                        android:id="@+id/documents_lin_klaims"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextPrimary"
                            android:text="Potensi Kerusakan Barang"/>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:textSize="16sp"
                                        android:text="Dok. No"/>

                                    <!--<EditText-->
                                    <!--android:id="@+id/documents_et_fuel"-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:layout_weight="1.2"-->
                                    <!--android:textSize="15sp"-->
                                    <!--android:inputType="number"-->
                                    <!--android:text="Rp0,-"/>-->

                                    <EditText
                                        android:id="@+id/documents_et_docno"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        android:textSize="15sp"
                                        android:inputType="text"
                                        android:hint=""/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:textSize="16sp"
                                        android:text="Keterangan"/>

                                    <!--<EditText-->
                                    <!--android:id="@+id/documents_et_tollparking"-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:layout_weight="1.2"-->
                                    <!--android:textSize="15sp"-->
                                    <!--android:inputType="number"-->
                                    <!--android:text="Rp0,-"/>-->
                                    <EditText
                                        android:id="@+id/documents_et_desc"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        android:textSize="15sp"
                                        android:inputType="textShortMessage"
                                        android:hint=""/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:textSize="16sp"
                                        android:text="Jml Barang Rusak"/>

                                    <!--<EditText-->
                                    <!--android:id="@+id/documents_et_escort"-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:layout_weight="1.2"-->
                                    <!--android:textSize="15sp"-->
                                    <!--android:inputType="number"-->
                                    <!--android:text="Rp0,-"/>-->

                                    <EditText
                                        android:id="@+id/documents_et_qty"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        android:textSize="15sp"
                                        android:inputType="number"
                                        android:hint="0"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:textSize="16sp"
                                        android:hint="Harga"/>

                                    <!--<EditText-->
                                    <!--android:id="@+id/documents_et_asdp"-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:layout_weight="1.2"-->
                                    <!--android:textSize="15sp"-->
                                    <!--android:inputType="number"-->
                                    <!--android:text="Rp0,-"/>-->

                                    <EditText
                                        android:id="@+id/documents_et_price"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        android:textSize="15sp"
                                        android:digits="1234567890"
                                        android:inputType="numberDecimal"
                                        android:hint="1"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:textSize="16sp"
                                        android:layout_marginBottom="15dp"
                                        android:hint="Nama PIC Customer"/>

                                    <!--<EditText-->
                                    <!--android:id="@+id/documents_et_portal"-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:layout_weight="1.2"-->
                                    <!--android:textSize="15sp"-->
                                    <!--android:inputType="number"-->
                                    <!--android:text="Rp0,-"/>-->

                                    <EditText
                                        android:id="@+id/documents_et_customer"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        android:textSize="15sp"
                                        android:inputType="textShortMessage"
                                        android:hint=""/>

                                </LinearLayout>

                            </LinearLayout>



                    </LinearLayout>




            </android.support.v7.widget.CardView>





            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/documents_card_photos"
                card_view:contentPadding="6dp"
                android:layout_marginBottom="8dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/documents_lin_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:text="Foto Bukti Potensi Kerusakan"/>

                    <LinearLayout
                        android:weightSum="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_marginRight="6dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            card_view:cardUseCompatPadding="true"
                            card_view:cardElevation="3dp"
                            card_view:cardCornerRadius="2dp">

                            <com.serasiautoraya.slimobiledrivertracking_training.module.CustomView.SquareImageView
                                android:id="@+id/documents_iv_capture1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/no_preview_available2"
                                android:scaleType="centerCrop"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_marginRight="6dp"
                            android:layout_marginLeft="6dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            card_view:cardUseCompatPadding="true"
                            card_view:cardElevation="3dp"
                            card_view:cardCornerRadius="2dp">

                            <com.serasiautoraya.slimobiledrivertracking_training.module.CustomView.SquareImageView
                                android:id="@+id/documents_iv_capture2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/no_preview_available2"
                                android:scaleType="centerCrop"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_marginLeft="6dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            card_view:cardUseCompatPadding="true"
                            card_view:cardElevation="3dp"
                            card_view:cardCornerRadius="2dp">

                            <com.serasiautoraya.slimobiledrivertracking_training.module.CustomView.SquareImageView
                                android:id="@+id/documents_iv_capture3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/no_preview_available2"
                                android:scaleType="centerCrop"/>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>



