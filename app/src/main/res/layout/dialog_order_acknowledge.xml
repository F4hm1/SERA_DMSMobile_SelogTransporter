<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/acknowledge_dialog_ordercode"
        android:textColor="@color/colorAccentDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:text="Order Code 173652"
        android:layout_height="wrap_content"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/acknowledge_dialog_ordercode"
        android:stretchColumns="*"
        android:layout_height="wrap_content">


        <!--order_title_hub-->
        <TableRow
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:background="@drawable/table_bottom_border"
            android:gravity="left">
            <TextView
                android:text="@string/order_title_dest"
                android:layout_column="0"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />

            <TextView
                android:id="@+id/acknowledge_dialog_destination" android:text="Surabaya"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />
        </TableRow>

        <!--order_title_origin-->
        <TableRow
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:background="@drawable/table_bottom_border"
            android:gravity="left">
            <TextView
                android:text="@string/order_title_origin"
                android:layout_column="0"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />

            <TextView
                android:id="@+id/acknowledge_dialog_origin" android:text="Jakarta"
                android:layout_column="1"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />
        </TableRow>

        <!--order_title_etd-->
        <TableRow
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:background="@drawable/table_bottom_border"
            android:gravity="left">
            <TextView
                android:text="@string/order_title_etd"
                android:layout_column="0"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />

            <TextView
                android:id="@+id/acknowledge_dialog_etd" android:text=""
                android:layout_column="1"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />
        </TableRow>

        <!--order_title_eta-->
        <TableRow
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:background="@drawable/table_bottom_border"
            android:gravity="left">
            <TextView
                android:text="@string/order_title_eta"
                android:layout_column="0"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />

            <TextView
                android:id="@+id/acknowledge_dialog_eta" android:text=""
                android:layout_column="1"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />
        </TableRow>

        <!--order_title_customer-->
        <TableRow
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:background="@drawable/table_bottom_border"
            android:gravity="left">
            <TextView
                android:text="@string/order_title_customer"
                android:layout_column="0"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />

            <TextView
                android:id="@+id/acknowledge_dialog_customer" android:text=""
                android:layout_column="1"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />
        </TableRow>

    </TableLayout>
</RelativeLayout>