<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/btn_rel_clockin_req"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_rounded_right"

                android:layout_weight="1.7"
                android:contextClickable="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/cico_button_clockin"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorTextIcon"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_clockin_24dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="right"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/btn_rel_clockout_req"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_rounded_left"
                android:gravity="right"
                android:layout_weight="1.7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/cico_button_clockout"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:textColor="@color/colorTextIcon"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_clockout_24dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>