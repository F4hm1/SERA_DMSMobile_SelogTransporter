<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/prove_title_firstimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="5dp"
                    android:text="Ambil foto bukti pertama"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prove_title_firstimage"
                    android:id="@+id/relativeLayout">

                    <ImageView
                        android:id="@+id/prove_first_image"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        android:background="@color/colorDeepOn"
                        android:src="@drawable/no_preview_available2" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btn_prove_firstimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/prove_first_image"
                        android:layout_alignEnd="@+id/prove_first_image"
                        android:layout_alignRight="@+id/prove_first_image"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="20dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_add_a_photo_black_24dp"
                        app:fabSize="normal" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/prove_title_secondimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="5dp"
                    android:text="Ambil foto bukti kedua"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prove_title_secondimage">

                    <ImageView
                        android:id="@+id/prove_second_image"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        android:background="@color/colorDeepOn"
                        android:src="@drawable/no_preview_available2" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btn_prove_secondimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/prove_second_image"
                        android:layout_alignEnd="@+id/prove_second_image"
                        android:layout_alignRight="@+id/prove_second_image"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="20dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_add_a_photo_black_24dp"
                        app:fabSize="normal" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/prove_title1_image1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="5dp"
                    android:text="Tanda Tangan "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prove_title1_image1">

                    <ImageView
                        android:id="@+id/prove_ttd_image"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorDeepOn"
                        android:src="@drawable/no_preview_available2" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btn_prove_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/prove_ttd_image"
                        android:layout_alignEnd="@+id/prove_ttd_image"
                        android:layout_alignRight="@+id/prove_ttd_image"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_border_color_black_24dp" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/btn_prove_submit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/colorTextIcon"
                    android:text="Submit"
                    android:gravity="left|center_vertical"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_rounded_corner"
                    android:drawableLeft="@drawable/ic_submit_24dp"
                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>