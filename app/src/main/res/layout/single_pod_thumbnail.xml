<?xml version="1.0" encoding="utf-8"?>
<com.serasiautoraya.slimobiledrivertracking.MVP.CustomView.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/squareRelLayout"
    android:layout_width="0dp"
    android:layout_height="100dp"
    android:layout_columnWeight="1"
    android:layout_margin="4dp"
    android:layout_rowWeight="1">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:cardUseCompatPadding="true"
        card_view:cardElevation="2dp">

        <com.serasiautoraya.slimobiledrivertracking.MVP.CustomView.SquareImageView
            android:id="@+id/pod_iv_prove_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:background="@color/colorDeepOn"
            android:scaleType="centerCrop"
            android:src="@drawable/add_foto_pod" />

        <TextView
            android:id="@+id/pod_tv_progress_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/black_transparent"
            android:gravity="center"
            android:text="29%"
            android:textColor="@color/colorDeepOn"
            android:textStyle="bold"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pod_pb_progress_1"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_gravity="bottom"
            android:progress="36"
            android:visibility="gone" />

    </android.support.v7.widget.CardView>

</com.serasiautoraya.slimobiledrivertracking.MVP.CustomView.SquareRelativeLayout>