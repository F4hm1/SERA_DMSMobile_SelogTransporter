<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.serasiautoraya.slimobiledrivertracking">

    <application
        android:name="com.serasiautoraya.slimobiledrivertracking.util.AppInit"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MVP.Login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.serasiautoraya.slimobiledrivertracking.MVP.Dashboard.DashboardActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.MVP.JourneyOrder.Activity.ActivityDetailActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.MVP.Profiling.ProfileActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.MVP.ChangePassword.ChangePasswordActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.MVP.NotificatonList.NotificationListActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.MVP.Fatigue.FatigueActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.MVP.JourneyOrder.DocumentCapture.DocumentCaptureActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.MVP.JourneyOrder.DocumentCapture.SigningActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.MVP.OrderHistory.OrderHistoryDetail.OrderHistoryDetailActivity"/>



        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.DashboardActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.EvidenceCaptureActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.ExpanseCaptureActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.OrderDetailActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.ChangePasswordActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.FatigueInterviewActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.ProveActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.SignatureActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.ProfileActivity"/>
        <activity android:name="com.serasiautoraya.slimobiledrivertracking.activity.ActionActivityActivity"/>


        <service android:name="com.serasiautoraya.slimobiledrivertracking.util.GPSTracker"
            android:enabled="true"
            android:exported="false"
            android:label="LocationService"
        />

        <service android:name="com.serasiautoraya.slimobiledrivertracking.util.FCMMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service android:name="com.serasiautoraya.slimobiledrivertracking.util.FirebaseInstanceIdServiceUtil">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <!--<receiver android:name=".util.FCMMessageRestartServiceReceiver" >-->
            <!--<intent-filter>-->
                <!--<action android:name="FCMReceiver" >-->
                <!--</action>-->
            <!--</intent-filter>-->
        <!--</receiver>-->

        <service
            android:name="com.serasiautoraya.slimobiledrivertracking.util.GPSTrackerService">
        </service>


        <receiver android:name="com.serasiautoraya.slimobiledrivertracking.util.GPSTrackerServiceReceiver"></receiver>

    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

</manifest>